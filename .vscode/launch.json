{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "args": ["start"],
            "runtimeArgs": ["--debug", "--inspect"],
            "preLaunchTask": "gulp default"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3000",
            "preLaunchTask": "gulp",
            "webRoot": "${workspaceFolder}"
        }
    ]
}
